@model List<PointRecord.Models.StaffPoint.StaffPoint>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    Lista de Registros
</h1>

@Html.ActionLink("Novo Registro", "add", "staffpoint")


<table class="table table-hover text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
   
            <th scope="col">Ações</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.Id</td>
                <td>
                    <a asp-controller="staffpoint" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                    <a asp-controller="staffpoint" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        </tbody>
    }
</table>
